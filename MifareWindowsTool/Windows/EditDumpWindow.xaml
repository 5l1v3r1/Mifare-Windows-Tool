<Window
    x:Class="MCT_Windows.Windows.EditDumpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:MifareWindowsTool.Properties"
    Title="{x:Static resx:Resources.DumpWindowTitle}"
    Width="660"
    Height="700"
    Background="#303030"
    Closing="Window_Closing"
    Foreground="White"
    Keyboard.KeyDown="Window_KeyDown"
    Loaded="Window_Loaded"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="btnOpenDump"
                    Width="auto"
                    MinWidth="100"
                    Click="btnOpenDump_Click"
                    Content="{x:Static resx:Resources.OpenDump}"
                    Style="{StaticResource buttonStyle}" />
                <Button
                    x:Name="btnSaveDump"
                    Width="auto"
                    MinWidth="100"
                    Margin="20,0,0,0"
                    Click="btnSaveDump_Click"
                    Content="{x:Static resx:Resources.SaveDumpAs}"
                    Style="{StaticResource buttonStyle}" />



                <Button
                    x:Name="btnClose"
                    Width="auto"
                    MinWidth="100"
                    Margin="20,0,0,0"
                    Click="btnClose_Click"
                    Content="{x:Static resx:Resources.Close}"
                    Style="{StaticResource buttonStyle}" />
            </StackPanel>
            <control:HexEditor
                x:Name="he"
                Width="640"
                Height="640"
                Background="#303030" />

        </StackPanel>
    </Grid>
</Window>
