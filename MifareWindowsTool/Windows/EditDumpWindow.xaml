<Window
    x:Class="MCT_Windows.Windows.EditDumpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resx="clr-namespace:MifareWindowsTool.Properties"
    xmlns:control="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static resx:Resources.DumpWindowTitle}" Loaded="Window_Loaded" Closing="Window_Closing"
    Width="660" WindowStyle="ToolWindow"
    Height="700"
    Background="#303030"
    Foreground="White" Keyboard.KeyDown="Window_KeyDown"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button
                    x:Name="btnOpenDump"
                  
                    Background="#5A595B"   Width="auto" 
                    Click="btnOpenDump_Click" MinWidth="100"
                    Content="{x:Static resx:Resources.OpenDump}"
                    Cursor="Hand"
                    Foreground="White" />
                <Button Margin="20,0,0,0"
                    x:Name="btnSaveDump"
                    Width="auto"  MinWidth="100"
                    Background="#5A595B"
                    Click="btnSaveDump_Click"
                    Content="{x:Static resx:Resources.SaveDumpAs}"
                    Cursor="Hand"
                    Foreground="White" />



                <Button
                    x:Name="btnClose"
                    Width="auto" MinWidth="100"
                    Margin="20,0,0,0"
                    Background="#5A595B"
                    Click="btnClose_Click"
                    Content="{x:Static resx:Resources.Close}"
                    Cursor="Hand"
                    Foreground="White" />
            </StackPanel>
            <control:HexEditor x:Name="he" Width="640" Height="640" Background="#303030"  />

        </StackPanel>
    </Grid>
</Window>
