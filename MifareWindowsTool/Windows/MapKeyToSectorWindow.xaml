<Window
    x:Class="MCT_Windows.MapKeyToSectorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:MCT_Windows.UserControls"
    Width="500"
     xmlns:resx="clr-namespace:MifareWindowsTool.Properties"
       Title="{x:Static resx:Resources.MapKeyToSectorWindowTitle}"
    Height="367"
    Background="#303030"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="98*" />
            <ColumnDefinition Width="225*" />
        </Grid.ColumnDefinitions>
        <Button
            x:Name="btnCancel"
            Width="auto" MinWidth="100"
            Height="26"
            Margin="20,0,0,19.667"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="#5A595B"
            Click="btnCancel_Click"
            Content="{x:Static resx:Resources.Cancel}"
            Cursor="Hand"
            Foreground="White" />
        <Button
            x:Name="btnStartMappingAndReadTag"
            Grid.Column="1"
            Width="auto"
            Height="26"
            Margin="0,0,20.333,19.667"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#5A595B"
            Click="btnStartMappingAndReadTag_Click"
            Content="{x:Static resx:Resources.btnStartMappingAndReadTagContent}"
            Cursor="Hand"
            Foreground="White" />
        <uc:ucListKeys
            x:Name="ucLK"
            Height="100"
           />
        <Label x:Name="lblChooseKeyFile"
            Grid.ColumnSpan="2"
            Margin="10,85,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{x:Static resx:Resources.lblChooseKeyFileContent}"
            Foreground="White" />
    </Grid>
</Window>
