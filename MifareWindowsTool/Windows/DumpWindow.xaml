<Window
    x:Class="MCT_Windows.Windows.DumpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MCT_Windows.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dump"
    Width="400"
    Height="600"
    Background="#303030"
    Foreground="White"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel
                x:Name="stkOpenDumps"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    x:Name="btnOpenDumpA"
                    Width="auto"
                    Margin="0,0,20,0"
                    Background="#5A595B"
                    Click="BtnOpenDumpA_Click"
                    Content="Open Dump A"
                    Cursor="Hand"
                    Foreground="White" />
                <Button
                    x:Name="btnOpenDumpB"
                    Width="auto"
                    Margin="50,0,0,0"
                    Background="#5A595B"
                    Click="BtnOpenDumpB_Click"
                    Content="Open Dump B"
                    Cursor="Hand"
                    Foreground="White" />
            </StackPanel>
            <RichTextBox
                x:Name="txtOutput"
                Width="auto"
                Height="500"
                Margin="20,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="#303030"
                FontFamily="Courier New"
                FontSize="16"
                Foreground="White"
                ScrollViewer.VerticalScrollBarVisibility="Auto" />
            <StackPanel
                x:Name="stkInfos"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Label Content="UID &amp; ManufInfo" Foreground="#9533F9" />
                <TextBlock>|</TextBlock>
                <Label Content="ValueBlock" Foreground="Yellow" />
                <TextBlock>|</TextBlock>
                <Label Content="KeyA" Foreground="Lime" />
                <TextBlock>|</TextBlock>
                <Label Content="KeyB" Foreground="Green" />
                <TextBlock>|</TextBlock>
                <Label Content="ACs" Foreground="Orange" />
                <TextBlock>|</TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    x:Name="btnSaveDump"
                    Width="85"
                    Background="#5A595B"
                    Click="btnSaveDump_Click"
                    Content="Save Dump as"
                    Cursor="Hand"
                    Foreground="White" />

                <Button
                    x:Name="btnShowAsAscii"
                    Width="85"
                    Margin="20,0,0,0"
                    Background="#5A595B"
                    Click="btnShowAsAscii_Click"
                    Content="Show as ASCII"
                    Cursor="Hand"
                    Foreground="White" />
                <Button
                    x:Name="btnClose"
                    Width="85"
                    Margin="20,0,0,0"
                    Background="#5A595B"
                    Click="btnClose_Click"
                    Content="Close"
                    Cursor="Hand"
                    Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
