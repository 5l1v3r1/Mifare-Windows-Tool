<Window
    x:Class="MCT_Windows.Windows.SelectKeyFilesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MCT_Windows.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:MCT_Windows.UserControls"
    Title="Key Files"
    Width="800"
    Height="450"
    Background="#303030"
    mc:Ignorable="d">

    <Grid Background="#303030">
        <StackPanel Orientation="Vertical">
            <ListBox  ScrollViewer.VerticalScrollBarVisibility="Auto"
                x:Name="lstKeys"
                Height="300"
                MaxHeight="300"
                VerticalAlignment="Top"
                Background="#303030"
                Foreground="White"  >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <RadioButton
                            Content="{Binding FileName}"
                            Foreground="White"
                            GroupName="keys"
                            IsChecked="{Binding IsSelected}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btnCancel"
                    Width="100"
                    Height="26"
                    Margin="220,10,10,10"
                    Background="#5A595B"
                    Click="btnCancel_Click"
                    Content="Cancel"
                    Cursor="Hand"
                    Foreground="White" />
                <Button
                    x:Name="btnEditKeyFile"
                    Width="100"
                    Height="26"
                    Margin="10"
                    Background="#5A595B"
                    Click="btnEditKeyFile_Click"
                    Content="Edit Key File"
                    Cursor="Hand"
                    Foreground="White" />
                <Button
                    x:Name="btnDeleteKeyFile"
                    Width="100"
                    Height="26"
                    Margin="10"
                    Background="#5A595B"
                    Click="btnDeleteKeyFile_Click"
                    Content="Delete Key File"
                    Cursor="Hand"
                    Foreground="White" />
                <Button
                    x:Name="btnNewKeyFile"
                    Width="100"
                    Height="26"
                    Margin="10"
                    Background="#5A595B"
                    Click="btnNewKeyFile_Click"
                    Content="New Key File"
                    Cursor="Hand"
                    Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
