<Window
    x:Class="MCT_Windows.WriteDumpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:MCT_Windows.UserControls"
    Title="Write Tag"
    Width="329.967"
    Height="366.279"
    Background="#303030"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnSelectDump"
            Width="150"
            Height="22"
            Margin="0,0,0,100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#5A595B"
            Click="btnSelectDump_Click"
            Content="Select Dump"
            Cursor="Hand"
            Foreground="White" />
        <Button
            x:Name="btnCancel"
            Width="100"
            Height="26"
            Margin="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="#5A595B"
            Click="btnCancel_Click"
            Content="Cancel"
            Cursor="Hand"
            Foreground="White" />
        <Button
            x:Name="btnWriteDump"
            Width="100"
            Height="26"
            Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#5A595B"
            Click="btnWriteDump_Click"
            Content="Write Dump"
            Cursor="Hand"
            Foreground="White" />
        <RadioButton
            x:Name="rbClone"
            Width="150"
            Margin="0,0,0,150"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Checked="rbClone_Checked"
            Content="Write Dump (Clone)"
            Foreground="White"
            GroupName="choices"
            IsChecked="false" />
        <RadioButton
            x:Name="rbFactoryFormat"
            Width="150"
            Margin="0,0,0,200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Checked="rbFactoryFormat_Checked"
            Content="Factory Format"
            Foreground="White"
            GroupName="choices"
            IsChecked="False" />
        <CheckBox
            x:Name="ckACs"
            Margin="30,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Use these Access Conditions for all sectors"
            Foreground="White"
            IsChecked="True"
            IsEnabled="False" />
        <CheckBox
            x:Name="ckEnableBlock0Writing"
            Margin="30,180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Advanced: Enable writing to manufacturer block"
            Foreground="White" />
        <TextBox
            x:Name="txtACsValue"
            Width="80"
            Height="23"
            Margin="135,155,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#303030"
            BorderThickness="0"
            Foreground="White"
            IsReadOnly="True"
            Text="FF0780"
            TextWrapping="Wrap" />

        <StackPanel
            Width="auto"
            Margin="0,0,35,50"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Vertical">
            <RadioButton
                x:Name="rbUseKeyA"
                Width="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Use Key A"
                Foreground="White"
                GroupName="keys"
                IsChecked="True" />
            <RadioButton
                x:Name="rbUseKeyB"
                Width="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Use Key B"
                Foreground="White"
                GroupName="keys" />
        </StackPanel>

    </Grid>
</Window>
