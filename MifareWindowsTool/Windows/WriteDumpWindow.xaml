<Window
    x:Class="MCT_Windows.WriteDumpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="350"
    xmlns:resx="clr-namespace:MifareWindowsTool.Properties"
       Title="{x:Static resx:Resources.WriteDumpWindowTitle}"
    Height="367"
    Background="#303030"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnSelectDump"
            Width="150"
            Height="22"
            Margin="0,0,0,100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#5A595B"
            Click="btnSelectDump_Click"
            Content="{x:Static resx:Resources.BtnSelectDumpContent}"
            Cursor="Hand"
            Foreground="White" />
        <Button
            x:Name="btnCancel"
            Width="100"
            Height="26"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="#5A595B"
            Click="btnCancel_Click"
            Content="{x:Static resx:Resources.Cancel}"
            Cursor="Hand"
            Foreground="White" />
        <Button
            x:Name="btnWriteDump"
            Width="100"
            Height="26"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#5A595B"
            Click="btnWriteDump_Click"
            Content="{x:Static resx:Resources.BtnWriteDumpContent}"
            Cursor="Hand"
            Foreground="White" />
        <RadioButton
            x:Name="rbClone"
            Width="150"
            Margin="0,0,0,150"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Checked="rbClone_Checked"
            Content="{x:Static resx:Resources.WriteDumpClone}"
            Foreground="White"
            GroupName="choices"
            IsChecked="false" />
        <RadioButton
            x:Name="rbFactoryFormat"
            Width="150"
            Margin="0,0,0,200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Checked="rbFactoryFormat_Checked"
            Content="{x:Static resx:Resources.FactoryFormat}"
            Foreground="White"
            GroupName="choices"
            IsChecked="False" />
        <CheckBox
            x:Name="ckACs"
            Margin="30,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{x:Static resx:Resources.CkACsContent}"
            Foreground="White"
            IsChecked="True"
            IsEnabled="False" />
        <CheckBox
            x:Name="ckEnableBlock0Writing"
            Margin="30,175,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{x:Static resx:Resources.CkEnableBlock0WritingContent}"
            Foreground="White" />
        <GroupBox BorderThickness="1" BorderBrush="Wheat" x:Name="gbSrcTgtDumps"  VerticalAlignment="Center" Margin="10,120,15,5" Height="55">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Foreground="White"   Content="{x:Static resx:Resources.SourceDump}" ></Label>
                    <Label Foreground="Wheat" x:Name="lblSrcDumpValue"  ></Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Foreground="White" Content="{x:Static resx:Resources.TargetDump}"  ></Label>
                    <Label Foreground="Wheat" x:Name="lblTargetDumpValue"  ></Label>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <TextBox
            x:Name="txtACsValue"
            Width="80"
            Height="23"
            Margin="135,155,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#303030"
            BorderThickness="0"
            Foreground="White"
            IsReadOnly="True"
            Text="FF0780"
            TextWrapping="Wrap" />
        <GroupBox  x:Name="gbSelectKey" Margin="0,0,15,40" HorizontalAlignment="Right" BorderThickness="1" 
            VerticalAlignment="Bottom" Height="40">
        <StackPanel
            Width="auto" 
            Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton
                x:Name="rbUseKeyA"
                Width="auto"
               
                Content="{x:Static resx:Resources.RbUseKeyAContent}"
                Foreground="White"
                GroupName="keys"
                IsChecked="True" />
            <RadioButton
                x:Name="rbUseKeyB"
                Width="auto"
               
                Content="{x:Static resx:Resources.RbUseKeyBContent}"
                Foreground="White"
                GroupName="keys" />
        </StackPanel>
        </GroupBox>
    </Grid>
</Window>
